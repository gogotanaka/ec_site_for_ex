<!DOCTYPE html>
<html>
<head>
  <title>EcSiteForEx</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <div class="row" style="margin-bottom: 20px">
    <div class="col-md-6 text-left">
      <h3><%= link_to 'パン屋さん.com', root_path %></h3>
    </div>
    <div class="col-md-6 text-right">
      <% if current_user %>
        <%= link_to 'ログアウト', destroy_user_session_path, class: 'btn btn-danger', method: :delete %>
      <% else %>
        <%= link_to '新規登録', new_user_registration_path, class: 'btn btn-danger' %>
        <%= link_to 'ログイン', new_user_session_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
  <%= yield %>
</div>
</body>
</html>
