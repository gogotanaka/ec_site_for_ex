%h2 これはフォームの部分テンプレート
%p これは文章
= form_for(@item) do |f|
  - if @item.errors.any?
    #error_explanation
      %h2
        = pluralize(@item.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - @item.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :price
    %br/
    = f.number_field :price
  .field
    = f.label :image
    %br/
    = f.file_field :image
  .actions
    = f.submit
